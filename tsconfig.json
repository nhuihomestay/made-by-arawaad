{
  "version": "1.0.0",
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "declaration": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "paths": {
      "@ctr": [
        "src/ctr"
      ],
      "@routes": [
        "src/routes"
      ]
    },
  },
  "include": [
    "./src/**/*",
    "spec/**/*.ts",
    "src/**/*"
  ],
  "exclude": [
    "src/public/"
  ]
}